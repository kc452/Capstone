<tool id="cam2map" name="cam2map">
  	<description>
		Convert camera image to a map projection
 	</description>

  	<command>cam2map from=$from map=$map to=$to</command>

  	<inputs>
    		<param name="from" format="img" type="data" label="Image input"/>
		<param name="map" format="map,cub" type="data" label=".map or .cub file"/>
  	</inputs>

	<outputs>
		<data name="to" format="cub"/>
	</outputs>

	<help>
		Remember to specify a .map file
	</help>
</tool>
