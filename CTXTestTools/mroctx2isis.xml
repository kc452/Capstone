<tool id="mroctx2isis" name="mroctx2isis">
	<description>Convert mro ctx to isis cube</description>
  	<command>mroctx2isis from=$input to=$output</command>

  	<inputs>
    		<param format="txt" name="input" type="data" label="from="/>
  	</inputs>

  	<inputs>
    		<param format="IMG" name="input" type="data" label="from="/>
  	</inputs>

  	<outputs>
    		<data format="cub" name="output" label="to="/>
  	</outputs>
  	
	<help>
		Input must be an IMG file
  	</help>
</tool>
